package fr.utbm.info.ia51.labwork1.environment.^agent

import java.util.EventObject
import java.util.Map
import java.util.UUID

import org.eclipse.xtext.xbase.lib.Pure
import fr.utbm.info.ia51.labwork1.environment.maze.CityObject
import fr.utbm.info.ia51.framework.math.Point2i

/** Event that describes a change in the environment.
 */
class EnvironmentEvent extends EventObject {

	val time : int
	
	val width : int
	
	val height : int

	val objects : Map<Point2i, CityObject>

	new (source : UUID, time : int, width : int, height : int, objects : Map<Point2i, CityObject>) {
		super(source)
		this.time = time
		this.width = width
		this.height = height
		this.objects = objects
	}
	
	@Pure
	def getTime : int {
		this.time
	}
	
	@Pure
	def getWidth : int {
		this.width
	}
	
	@Pure
	def getHeight : int {
		this.height
	}

	@Pure
	def getObjects : Map<Point2i, CityObject> {
		this.objects
	}

}